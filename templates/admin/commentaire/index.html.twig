{% extends 'admin_base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}

    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Commentaires </h1>
                </div><!-- /.col -->
                <div class="col-sm-6">

                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">

                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-12">



                                    <table class="table"  id="example2">
                                        <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Pseudo</th>
                                            <th>Email</th>
                                            <th>Contenu</th>
                                            <th>Publi√©</th>
                                            <th>Profondeur</th>
                                            <th>Article</th>
                                            <th>actions</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for commentaire in commentaires %}
                                            <tr>
                                                <td>{{ commentaire.id }}</td>
                                                <td>{{ commentaire.pseudo }}</td>
                                                <td>{{ commentaire.email }}</td>
                                                <td>
                                                    <a href="#" class="" data-toggle="modal" data-target="#exampleModal{{ commentaire.id }}">
                                                        <i class="fa fa-file-alt"></i>Voir le contenu
                                                    </a>

                                                    <!-- Modal -->
                                                    <div class="modal fade" id="exampleModal{{commentaire.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog"  role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title" id="exampleModalLabel">Commentaire </h5>
                                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    {{ commentaire.contenu | raw}}
                                                                </div>

                                                            </div>
                                                        </div>
                                                    </div>

                                                  </td>
                                                <td>{{ commentaire.createdAt ? commentaire.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                                <td>{{ commentaire.depth }}</td>
                                                <td>{{ commentaire.article.titre}}</td>

                                                <td class="project-actions text-right py-0 align-middle">
                                                    <div class="btn-group btn-group-sm">
                                                        <a class="btn btn-primary btn-sm" href="">
                                                            {{ commentaire.active}}<i class="fa fa-folder">
                                                            </i></a>

                                                        <a href="{{ path('commentaire_delete',{id:commentaire.id}) }}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                                    </div>
                                                </td>



                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="7">no records found</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div><!-- /.col -->
                            </div><!-- /.row -->
                        </div>


                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
    </section>



{% endblock %}
