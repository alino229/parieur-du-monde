                            <div class="invalid-feedback">{{ form_errors(form.away) }}</div>


                        </div>

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <div class="col-md-6">
                <div class="card card-secondary">

                    <div class="card-body">
                        <div class="form-group">
                            <label for="inputEstimatedBudget">{{ form_label(form.competition) }}</label>
                            {{ form_widget(form.competition,{
                                'attr':{'class':'form-control'}
                            }) }}
                            <div class="invalid-feedback">{{ form_errors(form.competition) }}</div>


                        </div>
                        <div class="form-group">
                            <label for="inputName">{{ form_label(form.pays) }}</label>
                            {{ form_widget(form.pays,{
                                'attr':{'class':'form-control '}
                            }) }}
                            <div class="invalid-feedback">{{ form_errors(form.pays) }}</div>

                        </div>
                        <div class="form-group">
                            <label for="inputName">{{ form_label(form.pronostics) }}</label>
                            <div class="input-group">

                                    {{ form_widget(form.pronostics,{
                                        'attr':{'class':'form-control'}
                                    }) }}
                                <div class="invalid-feedback">{{ form_errors(form.pronostics) }}</div>




                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputStatus">{{ form_label(form.cote) }}</label>
                            {{ form_widget(form.cote ,{
                                'attr':{'class':'form-control'}
                            }) }}
                            <div class="invalid-feedback">{{ form_errors(form.cote) }}</div>

                        </div>





                        <div class="form-group " >
                            <label>{{ form_label(form.day) }}:</label>
                            <div class="input-group " data-target-input="nearest">
                                {{ form_widget(form.day,{
                                    'attr':{'class':'form-control '}
                                }) }}

                            </div>
                            <div class="invalid-feedback">{{ form_errors(form.day) }}</div>



                        </div>
                        <div class="form-group " >
                            <label>{{ form_label(form.time) }}:</label>
                            <div class="input-group "  data-target-input="nearest">
                                {{ form_widget(form.time,{
                                    'attr':{'class':'form-control '}
                                }) }}

                            </div>
                            <div class="invalid-feedback">{{ form_errors(form.time) }}</div>



                        </div>
                        <div class="form-group">
                            <label for="">{{ form_label(form.homeFlagFile) }}</label>
                            <div class="input-group">

                                    {{ form_widget(form.homeFlagFile,{
                                        'attr':{'class':''}
                                    }) }}


                            </div>
                            <div class="invalid-feedback">{{ form_errors(form.homeFlagFile) }}</div>

                        </div>
                        <div class="form-group">
                            <label for="">{{ form_label(form.awayFlagFile) }}</label>
                            <div class="input-group">

                                    {{ form_widget(form.awayFlagFile,{
                                        'attr':{'class':''}
                                    }) }}


                            </div>
                            <div class="invalid-feedback">{{ form_errors(form.awayFlagFile) }}</div>
                        </div>



                        <div class="form-group">
                            <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                                {{ form_widget(form.published,{
                                    'attr':{'class':'custom-control-input'}
                                }) }}
                                {#                                <input type="checkbox" class="custom-control-input" id="customSwitch1" name="article[published]">#}
                                <label class="custom-control-label" for="pronostics_published">{{ form_label(form.published) }}</label>
                                <div class="invalid-feedback">{{ form_errors(form.published) }}</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputFile">{{ form_label(form.category) }}</label>
                            <div class="input-group">

                                    {{ form_widget(form.category,{
                                        'attr':{'class':'form-control'}
                                    }) }}

                                </div>
                            <div class="invalid-feedback">{{ form_errors(form.category) }}</div>

                            </div>


                    </div>
                    <!-- /.card-body -->
                    <a href="{{ path('pronostics_index') }}">back to list</a>
                </div>
                <!-- /.card -->
            </div>
        </div>



    </section>
    {{ form_end(form) }}

{% endblock %}
