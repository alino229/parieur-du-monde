{% extends 'admin_base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1> Abonnement VIP </h1>
                </div>
                <div class="col-sm-6">
                    <div class="breadcrumb float-sm-right">
                        {{ form_widget(form.sauvegarder,{
                            'attr':{'class':'btn btn-success float-right'}
                        }) }}
                        {#<button type="submit" class="btn btn-success float-right" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fa fa-minus"></i>Créer un nouvel article
                        </button>#}
                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">

        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    {# <div class="card-header">
                         <h3 class="card-title"></h3>

                         <div class="card-tools">
                             <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                 <i class="fa fa-minus">Create new Article</i></button>
                         </div>
                     </div>#}
                    <div class="card-body">
                        <div class="form-group">
                            <label for="inputName">{{ form_label(form.abonnement) }}</label>
                            {{ form_widget(form.abonnement,{
                                'attr':{'class':'form-control select'}
                            }) }}

                        </div>
                        <div class="form-group">
                            <label for="inputDescription">{{ form_label(form.user) }}</label>
                            {{ form_widget(form.user,{
                                'attr':{'class':'form-control select'}
                            }) }}

                        </div>
                        <div class="form-group">
                            <label for="inputDescription">{{ form_label(form.active) }}</label>
                            {{ form_widget(form.active,{
                                'attr':{'class':'form-control '}
                            }) }}

                        </div>

                    </div>
                    <div class="card-footer">
                        <a class="btn btn-info btn-sm" href="{{ path('vip_index') }}">retour à la liste</a>



                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>

        </div>
        <!-- /.card-body -->




    </section>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
