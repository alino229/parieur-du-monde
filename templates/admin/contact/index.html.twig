{% extends 'admin_base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Article index</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a class="btn btn-success float-right" href="{{ path('admin_article_new') }}">Créer un nouveau article</a></li>

                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">

                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table"  id="example2"  data-order='[[ 1, "asc" ]]' data-page-length='20'>
                                        <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Nom</th>
                                            <th>Email</th>
                                            <th>Site</th>
                                            <th>Message</th>
                                            <th>Envoyer le</th>

                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for contact in contacts %}
                                            <tr>
                                                <td>{{ contact.id }}</td>
                                                <td>{{ contact.nom }}</td>
                                                <td>
                                                    <a href="mailto:{{ contact.email }}">{{ contact.email }}</a>

                                                <td>{{ contact.site }}</td>
                                                <td>
                                                    <a href="#" class="" data-toggle="modal" data-target="#exampleModal{{ contact.id }}">
                                                        <i class="fa fa-file-alt"></i>Voir le contenu
                                                    </a>

                                                    <!-- Modal -->
                                                    <div class="modal fade" id="exampleModal{{ contact.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog"  role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title" id="exampleModalLabel"> Message reçu  </h5>
                                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    {{ contact.message | raw}}
                                                                </div>

                                                            </div>
                                                        </div>
                                                    </div></td>
                                                <td>{{ contact.createdAt ? contact.createdAt|date('d-m-Y à H:i:s') : '' }}</td>

                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="7">no records found</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div><!-- /.col -->
                            </div><!-- /.row -->
                        </div>


                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
    </section>

{% endblock %}
