{% extends "base.html.twig"%}
{% block title %}inscription{% endblock %}
{% block head %}
    {{ parent() }}

{% endblock %}
{% block body %}

    <section  id="contact connect">
        <div class="" style="margin: 0 auto;padding-bottom: 2rem;">
            <div class="forum_cont signin-container sign-container">
                <div class="sign_body body-connect">
                    <div class="form-header" style="margin-bottom: 3rem">
                        <h2>Inscription</h2>
                    </div>
                    <div class="sigin-form" >
                        {% for flashError in app.flashes('verify_email_error') %}
                            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                        {% endfor %}
                        {{ form_start(registrationForm) }}

                        <input type="hidden" name="MAX_FILE_SIZE" value="122880" />

                        <div class="form-group">
                            <div class="row">
                                <div class="form-label-group">
                                     {{ form_row(registrationForm.pseudo
                                     ,{label:' ','attr':{'class':'form-control','placeholder':'pseudo'}

                                         }) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="form-label-group">
                                    {{ form_row(registrationForm.email,{
                                        label:'  ','attr':{'class':'form-control','placeholder':'votre email'}
                                    }) }}

                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">


                                    {{ form_row(registrationForm.plainPassword, {
                                        label: ' ','attr':{'class':'form-control','placeholder':'Votre mot de passe'}
                                    }) }}


                            </div>
                        </div>
                        <div class="form-group" style="margin-bottom: 0!important;">
                            <div class="row">
                                <div class="form-check" style="color: #f6f6f6;">
                                    <span style="font-size: 1.2rem;padding: .5rem;display: inline-block">Choisissez votre avatar (Taille max : 120Ko):</span>
                                    {{ form_row(registrationForm.avatar, {
                                        label: ' ','attr':{'class':'form-control'}
                                    }) }}

                                </div>
                            </div>
                        </div>



                        <div class="form-group">
                            <div class="row botton ">
                                <input type="submit" name="inscription_submit" class="btn signin-btn btn-lg" id="sign-validate" value="s'inscrire">

                            </div>
                        </div>
                        {{ form_end(registrationForm) }}
                    </div>
                    <div class="text_center">
                        <div class="politiq">
                            En cliquant sur <b>«s'inscrire»</b>, vous acceptez nos<br/>
                            <p>
                                <a href="{{ path('confidentialite') }}">conditions d'utilisation</a></p>

                        </div>

                    </div>

                </div>
            </div>


        </div>


    </section>

{% endblock %}
